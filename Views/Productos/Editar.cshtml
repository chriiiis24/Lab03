@model InventarioTechSolutions.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h1 class="mb-3">Editar Producto</h1>

<form asp-action="Editar" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="IdProducto" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cantidad en Stock</label>
        <input asp-for="CantidadStock" type="number" class="form-control" />
        <span asp-validation-for="CantidadStock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
