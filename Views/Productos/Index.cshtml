@model List<InventarioTechSolutions.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    var search = ViewData["Search"] as string;
}

    <h1 class="mb-3">Listado de Productos</h1>

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Buscar por nombre..."
                   value="@search" />
            <button class="btn btn-primary" type="submit">Buscar</button>
            <a class="btn btn-outline-secondary" href="/Productos">Limpiar</a>
        </div>
    </form>

@if (!Model.Any())
{
        <div class="alert alert-warning">
            No se encontraron productos.
        </div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.IdProducto</td>
                        <td>@p.Nombre</td>
                        <td>@p.Precio</td>
                        <td>@p.CantidadStock</td>
                        <td>
                            <a class="btn btn-sm btn-warning"
                               asp-action="Editar"
                               asp-route-id="@p.IdProducto">
                                Editar
                            </a>
                            <a class="btn btn-sm btn-danger"
                               asp-action="Eliminar"
                               asp-route-id="@p.IdProducto">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
